@model IEnumerable<Entity.Concrete.Blog>
@foreach (var item in Model)
{


    <div class="post-content-body">
        <p> @item.BlogContent</p>
        <div class="row mb-5 mt-5">
            <div class="col-md-12 mb-4">
                <img src="@item.BlogImage2" alt="Image placeholder" class="img-fluid rounded">
            </div>
            <div class="col-md-6 mb-4">
                <img src="@item.BlogImage3" alt="Image placeholder" class="img-fluid rounded">
            </div>
            <div class="col-md-6 mb-4">
                <img src="@item.BlogImage4" alt="Image placeholder" class="img-fluid rounded">
            </div>
        </div>
    </div>
}