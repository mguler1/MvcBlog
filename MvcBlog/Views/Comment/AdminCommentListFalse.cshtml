@model IEnumerable<Entity.Concrete.Comment>
@{
    ViewBag.Title = "AdminCommentListFalse";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Onaylanmamış Yorumlar</h2>

<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="card-body">

                    <!-- Post -->
                    @foreach (var item in Model)
                    {
                        <div class="post">

                            <div class="user-block">

                                <img class="img-circle img-bordered-sm" src="/adminLTE-3.0.4/dist/img/user1-128x128.jpg" alt="user image">

                                <span class="username">

                                    <a href="#">@item.UserName - @item.Blog.BlogTitle</a>

                                    <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>

                                    <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>

                                </span>

                                <span class="description"> @item.CommentDate.ToShortDateString()</span>

                            </div>

                            <!-- /.user-block -->

                            <p>

                                @item.CommentText
                            </p>

                            <p>

                                <a href="/Comment/UpdateCommentToTrue/@item.CommentId" class="link-black text-sm mr-2"><i class="fas fa-deaf"></i>Onayla</a>


                            </p>



                        </div>
                    }
                </div>

            </div>

        </div><!-- /.card-body -->



    </section>

</body>

</html>