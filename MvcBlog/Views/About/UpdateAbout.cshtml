@model IEnumerable<Entity.Concrete.About>  
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <div class="row">

            <div class="col-md-12">

                <div class="card card-primary">

                    <div class="card-header">

                        <h3 class="card-title">Hakkımda Sayfa Düzenlemesi</h3>

                        <div class="card-tools">

                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                                <i class="fas fa-minus"></i>

                            </button>

                        </div>

                    </div>
                    @using (Html.BeginForm("UpdateAbout","About",FormMethod.Post)) 
                    { 
                <div class="card-body">
                    @foreach (var item in Model)
                    {
                        <div class="form-group">

                          

                            <input type="hidden" name="AboutId" class="form-control" value="@item.AboutId">

                        </div>
                        <div class="form-group">

                            <label for="inputName">Görsel 1</label>

                            <input type="text" name="AboutImage" class="form-control" value="@item.AboutImage">

                        </div>
                        <div class="form-group">

                            <label for="inputName">Görsel 2</label>

                            <input type="text" name="AboutImage2" class="form-control" value="@item.AboutImage2">

                        </div>
                        <div class="form-group">

                            <label for="inputDescription">Açıklana1</label>

                            <textarea name="AboutContent" class="form-control" rows="4">@item.AboutContent</textarea>

                        </div>
                        <div class="form-group">

                            <label for="inputDescription">Açıklana2</label>

                            <textarea name="AboutContent2" class="form-control" rows="4">@item.AboutContent2</textarea>

                        </div>

                    }
                    <button class="btn btn-success -btn-sm">Güncelle</button>
                </div>
                    }
                    <!-- /.card-body -->
                      
                </div>

                <!-- /.card -->

            </div>



        </div>



    </section>

</body>

</html>


